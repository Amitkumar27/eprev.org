---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Anton Eprev</title>
    <link href="http://{{ site.public_host }}/atom.xml" rel="self" />
    <link href="http://{{ site.public_host }}/" />
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://{{ site.public_host }}/</id>
    <author>
        <name>Anton Eprev</name>
        <email>a.eprev@gmail.com</email>
    </author>
    {% for post in site.posts %}
        <entry>
            <title>{{ post.title }}</title>
            <link href="http://{{ site.public_host }}{{ post.url }}"/>
            <updated>{{ post.date | date_to_xmlschema }}</updated>
            <id>http://{{ site.public_host }}{{ post.id }}</id>
            <content type="html">{{ post.content | xml_escape }}</content>
        </entry>
    {% endfor %}
</feed>
